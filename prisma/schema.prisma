generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  bio       String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Sessions for authentication
  sessions  Session[]
  
  // Projects created by user
  projects  Project[]
  
  // Notifications for user
  notifications Notification[]
  
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  startDate   DateTime?
  color       String   @default("#5B4FCF") // Project color for UI
  status      String   @default("Active") // Draft, Paused, Active
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Tasks in this project
  tasks       Task[]
  
  @@map("projects")
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("todo") // todo, in-progress, done
  order       Int       @default(0)
  dueDate     DateTime?
  dueTime     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Notifications related to this task
  notifications Notification[]
  
  @@map("tasks")
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // DUE_DATE_PASSED, DUE_DATE_CLOSE, PROJECT_COMPLETED, TASK_COMPLETED, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  projectId String?
  
  @@map("notifications")
  @@index([userId, isRead])
  @@index([createdAt])
}
